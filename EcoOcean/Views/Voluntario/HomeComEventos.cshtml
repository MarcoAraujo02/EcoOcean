
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <style>
        .titulo {
            margin-left: 37%;
        }

        .tabela {
            margin-top: 5%;
            margin-left: 33%;
            text-align: left;
        }

        .btn {
            background-color: #02ac92;
            padding: 10px 20px;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 2px;
            cursor: pointer;
            border-radius: 10px;
            border: 2px dashed #02ac92;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
            transition: .4s;
        }

            .btn span:last-child {
                display: none;
            }

            .btn:hover {
                transition: .4s;
                border: 2px dashed #02ac92;
                background-color: #fff;
                color: #02ac92;
            }

            .btn:active {
                background-color: #87dbd0;
            }

    </style>
    <link href="/static/css/listacl.css" rel="stylesheet">
    <link href="/static/css/botao.css" rel="stylesheet">

</head>
<a class="btn" asp-area="" asp-controller="Home" asp-action="Index">Voltar</a>

<body>



    <div class="btn-link-flash" role="alert" align="center">
    </div>

    <h1 class="titulo">Lista de Eventos</h1>

    <label>ID do Voluntario</label>
    <input name="IdVoluntario" value="@ViewBag.IdVoluntario">


    <table class="tabela" bgcolor="black" width="500">

        <tr bgcolor="grey" align="center">
            <th width="100">Cep</th>
            <th width="100">Estado</th>
            <th width="100">Cidade</th>
            <th width="100">Rua</th>
            <th width="100">Complemento</th>
            <th width="100">Data de Inicio</th>
            <th width="100">Participar</th>

        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Evento != null && item.Evento.Status == "Andamento")
                {
                    <tr bgcolor="lightgrey" align="center">
                        <td>@item.Area.Cep</td>
                        <td>@item.Area.Estado</td>
                        <td>@item.Area.Cidade</td>
                        <td>@item.Area.Rua</td>
                        <td>@item.Area.Descricao</td>
                        <td>
                            @if (item.Evento != null && item.Evento.DataInicio != null)
                            {
                                <text>@item.Evento.DataInicio</text>
                            }
                            else
                            {
                                <text>Sem evento associado a esse CEP, associe um</text>
                            }
                        </td>
                        <td><a asp-controller="Voluntario" asp-action="ParticiparEvento" asp-route-VoluntarioId="@ViewBag.IdVoluntario" asp-route-eventoId="@item.Evento.Id">Participar</a></td>
                    </tr>
                }
            }



        </tbody>

    </table>

</body>
</html>