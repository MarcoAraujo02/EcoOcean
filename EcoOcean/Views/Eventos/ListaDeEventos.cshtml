﻿
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8">
    <title>Title</title>
    <link href="/static/css/listacl.css" rel="stylesheet">
    <link href="/static/css/botao.css" rel="stylesheet">
    <link href="~/css/Tabela.css" rel="stylesheet" type="text/css" />

</head>


<body>

    <div class="logo">
        <img src="~/css/imgs/Logo.png" alt="Logo">____
        <a class="btn" asp-area="" asp-controller="Administrador" asp-action="Home">Voltar</a>
    </div>

    <div class="btn-link-flash" role="alert" align="center">
    </div>

    <h1 class="titulo">Lista de Eventos</h1>
  
    <br /><br />    
    <table class="tabela" bgcolor="black" width="800">

        <tr bgcolor="grey" align="center">
            <th width="100">Cep</th>
            <th width="100">Estado</th>
            <th width="100">Cidade</th>
            <th width="100">Rua</th>
            <th width="100">Complemento</th>
            <th width="100">Data de Inicio</th>
            <th width="100">Finalizar</th>

        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Evento != null && item.Evento.Status == "Andamento")
                {
                    <tr bgcolor="lightgrey" align="center">
                        <td>@item.Area.Cep</td>
                        <td>@item.Area.Estado</td>
                        <td>@item.Area.Cidade</td>
                        <td>@item.Area.Rua</td>
                        <td>@item.Area.Descricao</td>
                        <td>
                            @if (item.Evento.DataInicio != null)
                            {
                                <text>@item.Evento.DataInicio</text>
                            }
                            else
                            {
                                <text>Sem evento associado a esse CEP, associe um</text>
                            }
                        </td>
                        <td><a asp-controller="Eventos" asp-action="FinalizarEvento" asp-route-eventoId="@item.Evento.Id">Finalizar</a></td>
                    </tr>
                }
            }
           

        </tbody>

    </table>
   
</body>
</html>