<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoOcean</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inscreening.styles.css" asp-append-version="true" />
    <link href="~/css/Coleta.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <form asp-controller="Coleta" asp-action="EfetuarColeta" method="post">
        <div class="logo">
            <img src="~/css/imgs/Logo.png" alt="Logo">
        </div>
        <h1 class="titulo">Coleta</h1>
        <div class="agrupamento-input">
            <select name="ParticipacaoId">
                <option value="">Selecione um Id de participacao para fazer uma coleta</option>
                @foreach (var part in ViewBag.Participacoes)
                {
                    <option value="@part.Id">@part.Id</option>
                }
            </select>
            <br />
            <p class="subtitulo">Informe a pesagem da coleta em kg:</p>
            <select name="TipoDoLixo">
                <option value="">Selecione o tipo do material</option>
                <option value="Papel">Papel</option>
                <option value="Metal">Metal</option>
                <option value="Plástico">Plástico</option>
                <option value="Vidro">Vidro</option>
                <option value="Organico">Orgânico</option>
            </select>
            <br />
            <input class="inputs" type="text" id="Quantidade" name="Quantidade" placeholder="Selecione em KG a quantidade">
        </div>
        <br /><br />
        <div class="agrupamento-links">
            <button type="submit" class="link-login">Adicionar</button>
        </div>
        <br />
        <a class="link-login-2" asp-area="" asp-controller="Administrador" asp-action="Home">Voltar</a>
    </form>
</body>
</html>